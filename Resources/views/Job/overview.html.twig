{% extends "JMSJobQueueBundle::base.html.twig" %}
{% import "JMSJobQueueBundle:Job:macros.html.twig" as macros %}

{% block title %}Overview - {{ parent() }}{% endblock %}

{% block content %}

<h1><div class="page-header">
        <td>Overview</td>
    </div></h1>

    <div class="navbar">
        <div class="navbar-inner">
            <a class="brand" href="{{ path("jms_jobs_overview") }}">Reset Filters</a>
            <ul class="nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        State
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        {% for state in states %}
                            <li><a href="{{ path("jms_jobs_overview", {"state": state, "queue" : app.request.get('queue'), "page" : 1 }) }}">{{ state }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
            <ul class="nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Queue
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        {% for queue in queues %}
                            <li><a href="{{ path("jms_jobs_overview", {"state": app.request.get('state'), "queue" : queue , "page" : 1 }) }}">{{ queue }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
        </div>
    </div>

{% if jobPager.haveToPaginate %}
    {{ jobPagerView.render(jobPager, jobPagerGenerator)|raw }}
{% endif %}

<table class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Command</th>
            <th>State</th>
            <th>Created At</th>
            <th>Run Delay</th>
            <th>Runtime</th>
            <th>Queue</th>
        </tr>
    </thead>

    <tbody>
        {% for job in jobPager %}
        <tr>
            <td><a href="{{ path("jms_jobs_details", {"id": job.id}) }}">{{ job.id }}</a></td>
            <td><a href="{{ path("jms_jobs_details", {"id": job.id}) }}">{{ macros.command(job) }}</a></td>
            <td><a href="{{ path("jms_jobs_overview", {"state": job.state, "queue" : app.request.get('queue'), "page" : 1 }) }}">{{ macros.state(job) }}</a></td>
            <td>{{ macros.ago(job.createdAt) }}</td>
            <td>{{ job.startedAt ? date_diff(job.createdAt, job.startedAt) : '' }}</td>
            <td>{{ macros.runtime(job) }}</td>
            <td><a href="{{ path("jms_jobs_overview", {"state": app.request.get('state'), "queue" : job.queueName, "page" : 1 }) }}">{{ job.queueName }}</a></td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">There are no jobs.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% if jobPager.haveToPaginate %}
    {{ jobPagerView.render(jobPager, jobPagerGenerator)|raw }}
{% endif %}

{% endblock %}